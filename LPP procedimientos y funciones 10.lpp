        llamar color_texto (7)// gris
        escriba "2. Potencia"
        llamar posicionar_cursor(35,14)
        llamar color_fondo (0)// negro
        llamar color_texto (7)// gris
        escriba "3. Area triangulo"
        llamar posicionar_cursor(35,16)
        llamar color_fondo (0)// negro
        llamar color_texto (7)// gris
        escriba "4. Area cuadrado"
        llamar posicionar_cursor(35,18)
        llamar color_fondo (0)// negro
        llamar color_texto (7)// gris
        escriba "5. Salir"
        llamar posicionar_cursor(38,20)
        llamar color_fondo (0)// negro
        llamar color_texto (7)// gris
        escriba "Opcion [ ]"
        llamar posicionar_cursor(46,20)
        lea opcion
